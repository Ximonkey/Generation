package introduction;
import java.util.Scanner;
public class operators {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		/**Java Logical Operators**
	You can test for true or false values with logical operators.

	
	Operator	Name		Description	
	&& 			Logical and	Returns true if both statements are true		
	|| 			Logical or	Returns true if one of the statements is true	
	!			Logical not	Reverse the result, returns false if the result is true	*/
	
		
		//Ejercicio
		System.out.println("Ingrese su edad:");
        int edad = scanner.nextInt();

        System.out.println("¿Tiene una membresía? (true/false):");
        boolean tieneMembresia = scanner.nextBoolean();

        // Verificar elegibilidad para descuento
        if (edad >= 60 && !tieneMembresia) {
            System.out.println("¡Felicidades! Usted es elegible para un descuento del 10%.");
        } else if (edad < 18 || tieneMembresia) {
            System.out.println("Usted es elegible para un descuento del 5%.");
        } else {
            System.out.println("Lo siento, no es elegible para ningún descuento en este momento.");
        }
        
        
        /*.equals*/
        
        
        System.out.println("¿Eres mexicano? (true/false):");
        boolean esMexicano = scanner.nextBoolean();

        System.out.println("¿Eres estudiante? (true/false):");
        boolean esEstudiante = scanner.nextBoolean();

        System.out.println("¿Eres maestro? (true/false):");
        boolean esMaestro = scanner.nextBoolean();

        System.out.println("¿Eres persona mayor de 60 años? (true/false):");
        boolean esPersonaMayor = scanner.nextBoolean();

        // Definir el costo base del boleto
        double costoBase = 100.0;

        // Aplicar descuentos según las condiciones
        if (esMexicano) {
            costoBase *= 0.9;  // Descuento del 10% para mexicanos
        }

        if (esEstudiante || esMaestro || esPersonaMayor) {
            costoBase *= 0.8;  // Descuento adicional del 20% para estudiantes, maestros y personas mayores
        }

        // Mostrar el costo del boleto después de aplicar los descuentos
        System.out.println("\nResumen del costo del boleto:");
        System.out.println("Costo base del boleto: $" + costoBase);
        
		
	}
}